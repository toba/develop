// For normal npm installation, configuration will be referenced at
// /node_modules/@toba/develop/tsconfig.json so the path to the project root is
// ../../../.
//
// For pnpm installation, configuration will be symblinked to
// /node_modules/.registry.npmjs.org/@toba/develop/[version]/node_modules/@toba/develop/tsconfig.json
// ./../../../../../../../.
{
   "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "newLine": "LF",
      "noImplicitAny": true,
      "noImplicitThis": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "sourceMap": false,
      "allowJs": false,
      "checkJs": false,
      //"outDir": "../../../cjs",
      "outDir": "../../../../../../../../cjs",
      "removeComments": false,
      "declaration": true,
      "alwaysStrict": true,
      "strictNullChecks": true,
      "strictBindCallApply": true,
      "skipLibCheck": true,
      // must be true for consistency with @babel/preset-typescript used by Jest
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      // "typeRoots": [
      //    "../../../node_modules/@types",
      //    "../../../node_modules/@toba/types",
      //    "../../../types"
      // ],
      "typeRoots": [
         "../../../../../../../../node_modules/@types",
         "../../../../../../../../node_modules/@toba/types",
         "../../../../../../../../types"
      ],
      "jsx": "react",
      "lib": ["dom", "es2017", "webworker", "es2018.intl"]
   },
   //"include": ["../../../src/**/*.ts*"],
   "include": ["../../../../../../../../src/**/*.ts*"],
   // "exclude": [
   //    "../../../node_modules/",
   //    "../../../esm/",
   //    "../../../cjs/",
   //    "../../../dist/",
   //    "../../../www/",
   //    "../../../src/**/*.test.ts*",
   //    "../../../src/**/__mocks__"
   // ]
   "exclude": [
      ".../../../../../../../../node_modules/",
      "../../../../../../../../esm/",
      "../../../../../../../../cjs/",
      "../../../../../../../../dist/",
      "../../../../../../../../www/",
      "../../../../../../../../src/**/*.test.ts*",
      "../../../../../../../../src/**/__mocks__"
   ]
}
